// 声明一个字体
@font-face
    font-family:'icomoon';
    src:url("./fonts/icomoon.eot?yisc3l");
    src:url("./fonts/icomoon.eot?yisc3l#iefix") format("embedded-opentype"),
    url("./fonts/icomoon.woff2?yisc3l") format("woff2"),
    url("./fonts/icomoon.ttf?yisc3l") format("truetype"),
    url("./fonts/icomoon.woff?yisc3l") format("woff"),
    url("./fonts/icomoon.svg?yisc3l#icomoon") format("svg");

*
    margin 0
    padding 0

a 
    text-decoration: none

// common css
.sleft
    float left 
    border-right: 1px solid #BDDAF5
    width 204px
    margin-top 6px 0 5px 12px
.sright
    float left
    width 204px
    margin-top 6px 0 5px 12px


.finance-wrapper
    height 102px
    width 388px
    border 1px solid #cae0f3
    border-top 3px solid #9ec9ee
    overflow hidden

.st-item .detail .detail-down span
    color: #2daa50

.st-item .detail span
    color: #DF4D42

[class^="icon-num-"], [class*=" icon-num-"]
    font-family: 'icomoon' !important
    speak none 
    font-style: normal
    font-weight: normal
    font-variant: normal
    text-transform: none 


.icon-num-1:before

    content "\31"

.icon-num-2:before
    content "\32"

.icon-num-3:before
    content "\33"

.icon-num-4:before
    content "\34"

.icon-num-5:before
    content "\35"

.icon-num-6:before
    content "\36"

.icon-num-7:before
    content "\37"


.icon-num-8:before
    content "\38"

.icon-num-9:before
    content "\39"

.icon-num-d:before
    content "\2e"